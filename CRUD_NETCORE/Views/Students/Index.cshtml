@model IEnumerable<CRUD_NETCORE.Models.Students>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>List Students</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="create" asp-controller="Students">Add New Students</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped table-responsive-md">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(x => x.Id)</td>
                        <td>@Html.DisplayNameFor(x => x.Firstname)</td>
                        <td>@Html.DisplayNameFor(x => x.Lastname)</td>
                        <td>@Html.DisplayNameFor(x => x.Email)</td>
                        <td>@Html.DisplayNameFor(x => x.Phone)</td>
                        <td colspan="2">Actions</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Firstname</td>
                            <td>@item.Lastname</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>
                                <a asp-controller="Students" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                            </td>
                            <td>
                                <a asp-controller="Students" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>

        }
        else
        {
            <p>Data Empty</p>
        }
    </div>
</div>
